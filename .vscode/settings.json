{
  "json.schemas": [
    {
      "fileMatch": ["app-config.json"],
      "schema": {
        "type": "object",
        "properties": {
          "template": {
            "description": "Cấu hình riêng của template ZaUI F&B",
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "enum": ["zaui-market"],
                "description": "Tên template. Bắt buộc phải mang giá trị zaui-market"
              },
              "apiUrl": {
                "type": "string",
                "description": "Đường dẫn đến API để lấy dữ liệu sản phẩm"
              },
              "oaIDtoOpenChat": {
                "type": "string",
                "description": "ID của OA được mở chat khi người dùng nhấn vào nút Liên hệ"
              },
              "logoUrl": {
                "type": "string",
                "description": "Đường dẫn đến logo của bệnh viện"
              },
              "hosName": {
                "type": "string",
                "description": "Tên bệnh viện"
              },
              "hosAddress": {
                "type": "string",
                "description": "Địa chỉ bệnh viện"
              }
            },
            "required": ["name"]
          }
        }
      }
    }
  ]
}
